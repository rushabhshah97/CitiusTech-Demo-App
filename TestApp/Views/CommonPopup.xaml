<?xml version="1.0" encoding="utf-8"?>

<toolkit:Popup
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    x:Class="TestApp.Views.CommonPopup">
    <StackLayout
        HorizontalOptions="FillAndExpand" 
        VerticalOptions="Center" 
        Padding="20"
        Spacing="20">
        
        <Label x:Name="title" FontAttributes="Bold" FontSize="20" HorizontalOptions="Start" />
        <Label x:Name="message" HorizontalOptions="StartAndExpand" FontSize="16" />
        <Button Clicked="Button_OnClicked" Text="OK" HorizontalOptions="FillAndExpand" VerticalOptions="Start" />
        
    </StackLayout>
</toolkit:Popup>